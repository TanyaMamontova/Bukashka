#include <iostream>

using namespace std;

int division(int a, int b) {
   if (b == 0) throw "Деление на ноль!";
      return a / b;
    }
    
int main () {
   int x;
   int y;
   cout << "Введите делимое: ";
   cin >> x;
   cout << "Введите делитель: ";
   cin >> y;
   try {
      cout << "Результат деления: " << division(x, y) << endl;
    } 

   catch (const char* iskl) {
    cout << "Исключение. Причина: " << iskl << endl;
   }
   return 0;
}
